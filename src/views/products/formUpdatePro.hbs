<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Edit Product</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->
        </div>
        <!-- Form Edit Product -->
        <div id="editProductModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    {{#with product}}
                    <form method="POST" action="/products/saveUpdate/{{masach}}?_method=PUT"
                        enctype="multipart/form-data">
                        <div class="modal-header">
                            <h4 class="modal-title">Update Product</h4>
                            <a href="/editProduct">
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-hidden="true">&times;</button>
                            </a>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Tên Sách</label>
                                <input type="text" class="form-control" value="{{tensach}}" name="tensach" required>
                            </div>
                            <div class="form-group">
                                <label>Tác giả</label>
                                <input type="text" class="form-control" value="{{tacgia}}" name="tacgia" required>
                            </div>
                            <div class="form-group">
                                <label>Ngày xuất bản</label>
                                <select class="form-control" id="NXB" name="manxb">
                                    {{#each NXB}}
                                    <option value="{{this.manxb}}">{{this.Ten}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Ngày xuất bản</label>
                                <input type="date" class="form-control" value="{{ngayXB}}" name="ngayXB" required>
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea class="form-control" cols="86" rows="10" placeholder="Mô tả truyện"
                                    name="MOTA" id="des">{{MOTA}}</textarea>
                            </div>
                            <div class="form-group-3">
                                <label>Giá</label>
                                <input type="number" class="form-control" value="{{gia}}" name="gia" required>
                            </div>
                            <div class="form-group">
                                <label>Ảnh</label><br>
                                <img src="{{IMAGE}}" alt="{{IMAGE}}" width="500" height="600"><br>
                                <input type="url" class="form-control" value="{{IMAGE}}" readonly>
                                <p style="margin-top: 10px;">Thay đổi: </p>
                                <input type="file" name="image">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-info" value="Save">
                        </div>
                    </form>
                    {{/with}}
                </div>
            </div>
        </div>
        <!-- End Form Edit Product -->
    </div>
</div>