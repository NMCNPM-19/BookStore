<div class="content-page">
	<div class="content">
		<div class="container">
			<div class="book-information">
				<h2 style="color: orange;">Tất cả sách</h2>


				<div class="mt-4">
				<div class="row">
					{{#each products}}

					<div class="col-sm-6 col-lg-4" style = "margin-bottom: 20px;">
								<a href="/books/{{this.masach}}">
					<div class="card" style=" height:100%">
						<div class="card-top">
						<img src="{{this.IMAGE}}" class="card-img-top" alt="{{this.tensach}}" />
						</div>

						<div class="card-body">
							<div class="card-title">
							{{this.tensach}}
							</div>

							<p class="card-text">{{this.gia}}</p>
						</div>
						</div>
					</a>
					</div>


					{{/each}}

				</div>
				</div>
				
							<div style="margin-top: 30px " >
								<ul class="pagination justify-content-end">
									{{#each Items}}
									<li class="page-item{{#if cur}} active{{/if}}"><a class="page-link"
											href="?title={{../title}}&&page={{item}}">{{item}}</a></li>
									{{/each}}
								</ul>
                        	</div>

	</div> <!-- content -->
</div>
