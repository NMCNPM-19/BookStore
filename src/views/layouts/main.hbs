<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description">
    <meta content="Coderthemes" name="author">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- App favicon -->
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Footable css -->
    <link href="/libs/footable/footable.core.min.css" rel="stylesheet" type="text/css">

    <!-- App css -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="/css/app.min.css" rel="stylesheet" type="text/css">
    <link href="/css/main.css" rel="stylesheet" type="text/css">
</head>
<body>
<!-- Begin page -->
<div id="wrapper">
    <!-- Topbar Start -->
    <div class="navbar-custom">
        <ul class="list-unstyled topnav-menu float-right mb-0">
            <li class="dropdown notification-list">
                <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                    {{!-- <img src="/images/users/avatar-1.jpg" alt="user-image" class="rounded-circle"> --}}

                    <span class="pro-user-name ml-1">
                        {{#if user}}
                        {{user.HOTEN}}
                        <img src="{{user.HINHANH}}" alt="avatar" class="user-avatar" style="">
                        {{else}}admin{{/if}} <i class="mdi mdi-chevron-down"></i> 
                    </span>
                </a>
                <div class="dropdown-menu dropdown-menu-right profile-dropdown ">
                    <!-- item-->
                    <div class="dropdown-header noti-title">
                        <h6 class="text-overflow m-0">Welcome !</h6>
                    </div>

                    {{!-- cart --}}
                    <a href="/cart" class="dropdown-item notify-item">
                        <i class="ri-shopping-cart-2-line"></i>
                        <span>Cart</span>
                    </a>

                    <div class="dropdown-divider"></div>

                    <!-- item-->
                    <a href="/user/profile" class="dropdown-item notify-item">
                        <i class="remixicon-account-circle-line"></i>
                        <span>Profile</span>
                    </a>

                    <div class="dropdown-divider"></div>

                    <a href="/user/changePasswd" class="dropdown-item notify-item">
                        <i class="ri-settings-2-line"></i>
                        <span>Change Password</span>
                    </a>

                    <div class="dropdown-divider"></div>

                    <!-- item-->
                    <a href="/logout" class="dropdown-item notify-item">
                        <i class="remixicon-logout-box-line"></i>
                        <span>Logout</span>
                    </a>

                </div>
            </li>
        </ul>

        <!-- LOGO -->
        <div class="logo-box">
            <a href="/" class="logo text-center">
                  <span class="logo-lg">
                      <img src="/images/logo-light.png" alt="" height="20">
                      <!-- <span class="logo-lg-text-light">Xeria</span> -->
                  </span>
                <span class="logo-sm">
                      <!-- <span class="logo-sm-text-dark">X</span> -->
                      <img src="/images/logo-sm.png" alt="" height="24">
                  </span>
            </a>
        </div>

        <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
            <li>
                <button class="button-menu-mobile waves-effect waves-light">
                    <i class="fe-menu"></i>
                </button>
            </li>
        </ul>
    </div>
    <!-- end Topbar -->

    <!-- ========== Left Sidebar Start ========== -->
    <div class="left-side-menu">
        <div class="slimscroll-menu">
            <!--- Sidemenu -->
            <div id="sidebar-menu">
                <ul class="metismenu" id="side-menu">
                    <li class="menu-title">Navigation</li>
                    <li>
                        <a href="/" class="waves-effect">
                            <i class="remixicon-dashboard-line"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>           

                    <li>
                        <a href="/customers" class="waves-effect">
                            <i class="ri-customer-service-fill"></i>
                            <span>  Customer </span>
                        </a>
                    </li>
                    <li>
                            <a href="/bill" class="waves-effect">
                                <i class="fas fa-dolly-flatbed"></i>
                                <span> Bán hàng </span>
                            </a>
                    </li>
                    <li>
                            <a href="/debt" class="waves-effect">
                                <i class='fas fa-money-check-alt'></i>
                                <span> Công nợ </span>
                            </a>
                    </li>
                    {{#unless user.emp}} <!-- employee can't access these features -->
                         {{#unless user.mag}} <!-- only admin can access these features -->
                            <li>
                                <a href="/accounts" class="waves-effect">
                                    <i class="ri-user-settings-fill"></i>
                                    <span> Account </span>
                                </a>
                            </li>

                             <li>
                                <a href="/rule" class="waves-effect">
                                    <i class='fas fa-balance-scale'></i>
                                    <span> Rules </span>
                                </a>
                            </li>
                        {{/unless}}
                        
                        <li>
                            <a href="/products" class="waves-effect">
                                <i class="remixicon-table-line"></i>
                                <span> Product </span>
                            </a>
                        </li>

						<li>
                            <a href="/storage" class="waves-effect">
                                <i class='fas fa-warehouse'></i>
                                <span> Tồn kho </span>
                            </a>
                        </li>

                        
                        <li>
                            <a href="/importOrder" class="waves-effect">
                                <i class="fas fa-dolly-flatbed"></i>
                                <span>Phiếu nhập</span>
                            </a>
                        </li>
                        
                    {{/unless}}
                </ul>

            </div>
            <!-- End Sidebar -->
        </div>
        <!-- Sidebar -left -->
    </div>
    <!-- Left Sidebar End -->

    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->
    {{{body}}}
    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->
    

    <!-- Footer Start -->
</div>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                2021 - 2022 &copy; Minton theme by <a href="">Coderthemes</a>
            </div>
        </div>
    </div>
</footer>
<!-- end Footer -->

</div>
<!-- END wrapper -->

<!-- Vendor js -->
<script src="/js/vendor.min.js"></script>
<script src="/libs/jquery-knob/jquery.knob.min.js"></script>
<script src="/libs/peity/jquery.peity.min.js"></script>
<!-- Sparkline charts -->
<script src="/libs/jquery-sparkline/jquery.sparkline.min.js"></script>
<!-- Footable js -->
<script src="/libs/footable/footable.all.min.js"></script>
<!-- init js -->
<script src="/js/pages/dashboard-1.init.js"></script>
<!-- App js -->
<script src="/js/app.min.js"></script>
{{!-- boostraps --}}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
{{!-- remix design --}}
<link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
{{!-- jquery --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" ></script>
{{{_sections.script}}}

</body>
</html>
