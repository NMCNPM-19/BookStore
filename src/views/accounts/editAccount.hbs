{{!-- model delete --}}
<div class="modal fade" id="delete-account-modals">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="true">&times;</button>
            </div>
            <div class="modal-body">
                Bạn có thật sự muốn xóa ?
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-delete-account" class="btn-delete-account btn btn-primary btn-danger">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<form name="form-delete-accounts" method="POST"></form>

<script>
    var deleteForm = document.forms['form-delete-accounts']
    var deleteBtns = Array.from(document.getElementsByClassName('delete-btns')); // lấy tất cả các button delete dưới dạng mảng
    var deleteConfirm = document.querySelector('.btn-delete-account')
    for (const deleteBtn of deleteBtns) {
        deleteBtn.onclick = function (e) {
            var account = this.getAttribute('data-accountid')// khi onclick vào button xóa của khóa học nào thì sẽ nhận được id của khóa học đó
            deleteConfirm.onclick = function (e) {  // sau đó click vào button confirm xóa để 
                deleteForm.action = `/products/${account}/del?_method=DELETE`; // truyền  url chứa id của từng khóa học vào action và với method DELETE
                deleteForm.submit(); // và submit form .
            }
        }

    }
</script>
{{!-- end model delete --}}

<!-- Form Add admin account -->
<div id="addAdminModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="/accounts/add">
                <div class="modal-header">						
                    <h4 class="modal-title">Add account</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="role">Account Type</label>
                        <select class="form-select" name="role">
                            <option selected value="emp">Employee</option>
                            <option value="adm">Admin</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="username">User name</label>
                        <input class="form-control" type="user" name="username" required="" placeholder="Enter user name">
                    </div>				
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" required="" id="password" name="password" placeholder="Enter your password">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" onclick="visibility()">
                        <label>Show password</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Form add admin account -->
<script>
    function visibility(){
        let x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
