<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Account Table</h4>
                    </div>
                </div>
            </div>     
            <!-- end page title --> 

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="header-title">Edit Account</h4>
                        <p class="sub-header">
                            from your Account Table.
                        </p>
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-12 text-sm-center form-inline">
                                    <div class="form-group mr-2">
                                        <a href="#addAdminModal" data-toggle="modal">
                                            <button class="btn btn-primary">
                                                <i class="mdi mdi-plus-circle mr-2"></i>
                                                <span>Add Account</span>
                                            </button>
                                        </a>                                             
                                    </div>
                                    <div class="form-group">
                                        <input id="demo-input-search2" type="text" placeholder="Search" class="form-control" autocomplete="off">
                                    </div>                         
                                </div>
                            </div>
                            <div class="row">
                                {{#if message}}<h4 style="color: red; margin-left: 10px">{{message}}</h4>{{/if}}
                            </div>
                        </div>

                        <table id="demo-foo-addrow" class="table table-centered table-striped table-bordered mb-0 toggle-circle" data-page-size="7">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>User</th>
                                    {{!-- <th>Password</th> --}}
                                    <th>Full name</th>
                                    <th>Email</th>
                                    {{!-- <th>Role</th> --}}
                                    <th>Edit</th>                                  
                                </tr>
                            </thead>
                            <tbody>
                                {{#each accounts}}
                                <tr>
                                    <td>{{this.MANV}}</td>
                                    <td>{{this.USER}}</td>
                                    {{!-- <td>{{this.PASS}}</td> --}}
                                    <td>{{this.HOTEN}}</td>
                                    <td>{{this.EMAIL}}</td>
                                    {{!-- <td>{{#if LOAINV}}</td> --}}
                                    <td>
                                        <a href="products/update/{{this.MANV}}" class="edit btn btn-link">
                                            <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                        </a>

                                        <a href="#delete-account-modals" class="delete-btns btn btn-link" data-toggle="modal"
                                            data-accountId="{{this.MANV}}" data-target="#delete-account-modals">
                                            <i class="material-icons " data-toggle="tooltip" title="delete">&#xe872;</i>
                                        </a>

                                    </td>                          
                                </tr>
                                {{/each}}
                            </tbody>          
                        </table> 

                        {{!-- Pagination --}}
                         <div style="margin-top: 30px ">
                            <ul class="pagination justify-content-end">
                                {{#each Items}}
                                <li class="page-item{{#if cur}} active{{/if}}"><a class="page-link" href="/editAccount?page={{item}}">{{item}}</a></li>
                                {{/each}}
                            </ul>    
                        </div> 

                    </div> <!-- end card-box -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

    </div> <!-- content -->

</div>

<!-- ============================================================== -->
<!-- End Page content -->
