<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Danh sách hóa đơn</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-8 text-sm-center form-inline">
                                    
                                    <div class="form-group">
                                        <form action="?title=">
                                            <input id="demo-input-search2" type="text" placeholder="Search"
                                            class="form-control" name="title" value=""autocomplete="off">

												<span for="start">Start month:</span>
												<input type="month" id="start" name="chooseMonth" min="2018-03" value={{chooseMonth}}>
                                            <button class="-outline-success my-2 my-sm-0 btn btn-primary" type="submit">
                                                <i class="fa fa-search mr-2"></i>
                                                <span> Tìm kiếm </span>
                                            </button>
                                        </form>
                                        
                                    </div>
                                    

                                </div>
                                <div class="form-group col-4 justify-content-end text-sm-center form-inline">
                                    <a href="/cart">
                                        <button class="btn btn-primary">
                                            <i class="mdi mdi-plus-circle mr-2"></i>
                                            <span>Thêm phiếu nhập</span>
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
					

                        <table id="demo-foo-addrow"
                            class="table table-centered table-striped table-bordered mb-0 toggle-circle"
                            data-page-size="7">
                            <thead>
                                <tr>

                                    <th>Mã phiếu</th>
                                    <th>Ngày bán</th>
                                    <th>Mã khách hàng</th>
									<th>Mã nhân viên</th>
                                    <th>Xem thêm</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each bill}}
                                <tr>
                                    <td>{{this.MAPM}}</td>
                                    <td>{{this.NGAYMUA}}</td>
                                    <td>{{this.MAKH}}</td>
									<td>{{this.MANV}}</td>
                                    <td>
                                        <a href="bill/view/{{this.MAPM}}" class="edit btn btn-link">
                                            <i class="material-icons" data-toggle="tooltip" title="View">&#xE8A0;</i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        {{!-- Pagination --}}
                        <div style="margin-top: 30px ">
                            <ul class="pagination justify-content-end">
                                {{#each Items}}
                                <li class="page-item{{#if cur}} active{{/if}}"><a class="page-link"
                                        href="?title={{../title}}&&chooseMonth={{this.chooseMonth}}&&page={{item}}">{{item}}</a></li>
                                {{/each}}
                            </ul>
                        </div>

                    </div> <!-- end card-box -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- content -->

    </div>


    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->

