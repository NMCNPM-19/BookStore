<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Edit Product</h4>
                    </div>
                </div>
            </div>     
            <!-- end page title --> 
        </div>
        <!-- Form Edit Product -->
        <div id="editProductModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    {{#if message}}<h4 style="color: red; margin-left: 10px">{{message}}</h4>{{/if}}
                    {{#with account}}
                    <form method="POST" action="/profile/saveUpdate/{{ID}}?_method=PUT">
                        <div class="modal-header">						
                            <h1 class="modal-title">Profile</h1>
                            <a href="/dashboard">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            </a>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>ID</label>
                                <input type="text" class="form-control" name="id" value="{{ID}}" readonly>
                            </div>					
                            <div class="form-group">
                                <label>Owner</label>
                                <input type="text" class="form-control" name="owner" value="{{OWNER}}">
                            </div>
                            <div class="form-group">
                                <label>Role</label>
                                <input type="text" class="form-control" name="role" value="{{ROLE}}" readonly>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-info" value="Update">
                        </div>
                    </form>
                    {{/with}}
                </div>
            </div>
        </div>
<!-- End Form Edit Product -->
    </div>
</div>

