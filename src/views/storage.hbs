<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Bảng Tồn Kho</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-12 text-sm-center form-inline">

                                    <div class="form-group">
                                        <form action="?title=">
                                            <input id="demo-input-search2" type="text" placeholder="Search"
                                            class="form-control" name="title" value=""autocomplete="off">
                                            <button class="-outline-success my-2 my-sm-0 btn btn-primary" type="submit">
                                                <i class="fa fa-search mr-2"></i>
                                                <span> Tìm kiếm </span>
                                            </button>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table id="demo-foo-addrow"
                            class="table table-centered table-striped table-bordered mb-0 toggle-circle"
                            data-page-size="7">
                            <thead>
                                <tr>

                                    <th>ID</th>
                                    <th>Author</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>atCreated</th>
                                    <th rowspan="2">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td>{{this.masach}}</td>
                                    <td>{{this.tacgia}}</td>
                                    <td>{{this.tensach}}</td>
                                    <td>{{this.gia}}</td>
                                    <td>{{this.atCreated}}</td>
                                    <td>
                                        <a href="products/update/{{this.masach}}" class="edit btn btn-link">
                                            <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                                        </a>

                                        <a href="#delete-book-modals" class="delete-btns btn btn-link" data-toggle="modal"
                                            data-bookId="{{this.masach}}" data-target="#delete-book-modals">
                                            <i class="material-icons " data-toggle="tooltip" title="delete">&#xe872;</i>
                                        </a>


                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                        {{!-- Pagination --}}
                        <div style="margin-top: 30px ">
                            <ul class="pagination justify-content-end">
                                {{#each Items}}
                                <li class="page-item{{#if cur}} active{{/if}}"><a class="page-link"
                                        href="?title={{../title}}&&page={{item}}">{{item}}</a></li>
                                {{/each}}
                            </ul>
                        </div>

                    </div> <!-- end card-box -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- content -->

    </div>


    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->










